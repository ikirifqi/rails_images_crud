<%= form_for @image, :html => { :multipart => true, :class => 'form-horizontal' } do |f| %>
  <% if @image.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@image.errors.count, "error") %> prohibited this image from being saved:</h2>

      <ul>
      <% @image.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title, :class => 'col-sm-1 control-label' %>
    <div class="col-sm-11">
      <%= f.text_field :title, :class => 'form-control', :placeholder => 'Image Title' %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :description, :class => 'col-sm-1 control-label' %>
    <div class="col-sm-11">
      <%= f.text_area :description, :class => 'form-control', :placeholder => 'Image Description', :rows => 8 %>
    </div>
  </div>

  <% if controller.action_name == 'edit' %>
    <div class="form-group">
      <%= label_tag 'current_image', 'Current Image', :class => 'col-sm-1 control-label' %>
      <div class="col-sm-11">
        <%= image_tag @image.data_url, :class => 'current-image' %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :data, :class => 'col-sm-1 control-label' %>
    <div class="col-sm-11">
      <%= f.file_field :data %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-1 col-sm-11">
      <%= f.submit 'Upload', :class => 'btn btn-success' %>
    </div>
  </div>
<% end %>
